{
    "name": "pfinalclub/regex-center",
    "description": "PHP 版本的正则表达式管理库，内置 100+ 精选正则，支持团队标准化",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "regex",
        "regular-expression",
        "validation",
        "pattern",
        "php",
        "library"
    ],
    "homepage": "https://github.com/pfinalclub/regex-center",
    "support": {
        "issues": "https://github.com/pfinalclub/regex-center/issues",
        "source": "https://github.com/pfinalclub/regex-center"
    },
    "authors": [
        {
            "name": "pfinalclub",
            "email": "lampxiezi@gmail.com",
            "homepage": "https://github.com/pfinalclub"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "pfinalclub\\RegexCenter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pfinalclub\\RegexCenter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}